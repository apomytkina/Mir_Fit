<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:minWidth="200dp"
    android:minHeight="200dp">

    <ImageView
        android:id="@+id/add_card_image"
        android:layout_width="355dp"
        android:layout_height="260dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/credit_card" />

    <EditText
        android:id="@+id/edit_text_name_card_frag_add_card"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="@string/hint_card_name"

        android:inputType="textPersonName"
        android:maxLength="15"
        android:textColor="@color/white"
        android:textColorHint="@color/hint_color"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="@+id/add_card_image"
        app:layout_constraintEnd_toEndOf="@+id/add_card_image"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="@+id/add_card_image"
        app:layout_constraintTop_toTopOf="@+id/add_card_image"
        app:layout_constraintVertical_bias="0.73"
        android:autofillHints="" />

    <EditText
        android:id="@+id/edit_text_card_number_frag_add_card"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="@string/hint_card_number"
        android:inputType="number"
        android:maxLength="16"
        android:textColor="@color/white"
        android:textColorHint="@color/hint_color"
        android:textSize="22sp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="@+id/add_card_image"
        app:layout_constraintEnd_toEndOf="@+id/add_card_image"
        app:layout_constraintStart_toStartOf="@+id/add_card_image"
        app:layout_constraintTop_toTopOf="@+id/add_card_image"
        app:layout_constraintVertical_bias="0.275"
        android:autofillHints="" />

    <Button
        android:id="@+id/btn_frag_add_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_add"
        app:layout_constraintBottom_toBottomOf="@+id/add_card_image"
        app:layout_constraintEnd_toEndOf="@+id/add_card_image"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="@+id/add_card_image"
        app:layout_constraintTop_toTopOf="@+id/add_card_image"
        app:layout_constraintVertical_bias="0.94" />

</androidx.constraintlayout.widget.ConstraintLayout>